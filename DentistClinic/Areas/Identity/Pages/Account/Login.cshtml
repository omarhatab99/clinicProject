@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_HomeLayout.cshtml";

}

    
<div class="box-page" style="background: linear-gradient(0deg, rgba(51, 53, 72, 0.05), rgba(51, 53, 72, 0.05)), #FFFFFF;">
    <div class="container" style="padding-top:90px; padding-bottom:180px;">
        <div class="row">
            <div class="col-lg-6 login-wrap">
                <div class="login-sec">
                    <div class="log-img">
                        <img class="img-fluid" src="assets/img/login-02.png" alt="Logo">
                    </div>
                </div>
            </div>
            <!--Start Login Form-->
            <div class="col-lg-6">
                <div class="row">
                    <div class="login-container p-5" style=" border-radius:15px; background-color:#FFF;box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 3px 0px, rgba(0, 0, 0, 0.06) 0px 1px 2px 0px;">
                        <div class="login-header">
                            <div class="center-logo text-center">
                                <h3 class="m-0 text-primary"><i class="fa fa-tooth me-2"></i>DentCare</h3>
                            </div>
                            <h4 class="text-muted py-4">Login</h4>
                        </div>
                        <form>
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control bg-light" style="border-radius:5px;" id="floatingInput" placeholder="name@example.com">
                                    <label for="floatingInput">Email address</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control bg-light" style="border-radius:5px;" id="floatingInput" placeholder="name@example.com">
                                    <label for="floatingInput">Email address</label>
                                </div>
                            </div>
                            <div class="forgotpass d-flex justify-content-between align-items-center py-3">
                                <div class="remember-me">
                                    <label class="custom_check mr-2 mb-0 d-inline-flex remember-me">
                                        Remember me
                                        <input type="checkbox" name="radio" class="mx-2">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <a href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="input-block login-btn text-center">
                                <button class="btn btn-primary btn-block w-75" type="submit">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--Endl Login Form-->
        </div>
    </div>
</div>


